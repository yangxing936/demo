
@{
    ViewBag.Title = "Index";
}

<script src="https://cdn.staticfile.org/vue/2.4.2/vue.min.js"></script>
<script src="https://cdn.staticfile.org/axios/0.18.0/axios.min.js"></script>
<div id="vue_det">
    <h4>site : {{data.site}}</h4>
    <h4>url : {{data.url}}</h4>
    <h4>Alexa : {{data.alexa}}</h4>
    <span v-if="TorF">哈哈哈</span>
    <table>
        <tr v-for="item in List">
            <td>{{item.name}}</td>
            <td>{{item.sex}}</td>
            <td>{{item.age}}</td>
        </tr>
        <tr v-for="item in object">
            <td>{{item}}</td>
        </tr>
    </table>
    <input type="checkbox" id="ck1" value="R" v-model="arr" />
    <input type="checkbox" id="ck2" value="L" v-model="arr" />
    <input type="checkbox" id="ck3" value="I" v-model="arr" />
    <span>选择的值为{{arr}}</span>
    <br />
    网站:<select id="selectId" v-model="select">
        <option value="www.baidu1.com">www.baidu1.com</option>
        <option value="www.baidu2.com">www.baidu2.com</option>
        <option value="www.baidu3.com">www.baidu3.com</option>
    </select>
    <span>选择的值为{{select}}</span>


</div>

<div id="app">
    <div v-for="item in info">
        {{item.name}}
    </div>
</div>


<div id="vueList">
    网站:<select id="selectId" v-model="select">
        <option value="1">www.baidu1.com</option>
        <option value="2">www.baidu2.com</option>
        <option value="3">www.baidu3.com</option>
    </select>
    <span>选择的值为{{select}}</span>
</div>

<script type="text/javascript">
    // 我们的数据对象
    var data = { site: "zaixianguankan", url: "www.baidu.com", alexa: 10000 }
    var List = [];
    List.push(1, 2, 3);
    var vm = new Vue({
        el: '#vue_det',
        data: {
            data: data,
            List: [
                {
                    name: "张三",
                    sex: "男",
                    age: "12"
                }
            ],
            object: {
                name: "张三",
                sex: "男",
                age: "12"
            },
            TorF: false,
            arr: [],
            select: '',
            info: null
        },

    })

    var vs = new Vue({
        el: "#vueList",
        data: {
            select: ''
        }
    })

    new Vue({
        el: '#app',
        data() {
            return {
                info: null
            }
        },
        mounted() {
            axios
                .get('https://www.runoob.com/try/ajax/json_demo.json')
                .then(response => (this.info = response))
                .catch(function (error) { // 请求失败处理
                    console.log(error);
                });
        }
    })

</script>